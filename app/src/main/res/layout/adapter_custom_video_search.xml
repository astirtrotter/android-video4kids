<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/ll_Main"
                android:layout_width="@dimen/margin_2x"
                android:layout_height="match_parent"
                android:layout_margin="07dp"
                android:background="@drawable/boder">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_Video_thum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                        <LinearLayout
                            android:id="@+id/ll_Block"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#88000000"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/blocked"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/margin_2" />

                        </LinearLayout>
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_4x"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_video_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center|right"
                            android:paddingRight="@dimen/margin_0.5x"
                            android:singleLine="true"
                            android:text="abc"
                            android:textColor="@color/black_text_color"
                            android:textSize="@dimen/margin_1x" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>


    </RelativeLayout>


</RelativeLayout>